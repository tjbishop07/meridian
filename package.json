{
  "name": "personal-finance",
  "version": "1.0.4",
  "description": "Meridian â€” find your financial north",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run copy-preload && vite",
    "build": "npm run copy-preload && vite build && electron-builder",
    "type-check": "tsc --build",
    "copy-preload": "mkdir -p dist-electron && cp electron/scraper-preload.cjs electron/ai-scraper-preload.cjs dist-electron/",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "npm run build",
    "postinstall": "electron-rebuild"
  },
  "keywords": [
    "electron",
    "finance",
    "personal-finance",
    "budgeting"
  ],
  "author": "Tom",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@nivo/bar": "^0.99.0",
    "@nivo/core": "^0.99.0",
    "@nivo/line": "^0.99.0",
    "@nivo/pie": "^0.99.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "better-sqlite3": "^11.7.0",
    "bufferutil": "^4.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-updater": "^6.8.3",
    "lucide-react": "^0.468.0",
    "node-cron": "^4.2.1",
    "papaparse": "^5.4.1",
    "puppeteer-core": "^23.0.0",
    "qrcode": "^1.5.4",
    "radix-ui": "^1.4.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "recharts": "^2.15.0",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "utf-8-validate": "^6.0.6",
    "vaul": "^1.1.2",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/papaparse": "^5.3.15",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/sharp": "^0.32.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.meridian.app",
    "productName": "Meridian",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.finance",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office",
      "icon": "build/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "tjbishop07",
      "repo": "meridian"
    }
  }
}
